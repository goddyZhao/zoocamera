<!doctype html>
<html ng-app="zoopervisor">
<head lang="en">
  <base href="/"/>
  <meta charset="UTF-8"/>
  <meta name="csrf-token" content="{{token}}"/>
  <meta name="isLogin" content="{{isLogin}}"/>
    {{#if zookeeperServerUrl}}
      <meta name="zookeeperServerUrl" content="{{zookeeperServerUrl}}"/>
    {{/if}}
  <title>Zoopervisor</title>

  <link rel="stylesheet" href="/build/fonts/fontello/css/animation.css"/>
  <link rel="stylesheet" href="/build/fonts/fontello/css/fontello.css"/>
  <link rel="stylesheet" href="/build/stylesheets/vendor.min.css"/>
  <link rel="stylesheet" href="/build/stylesheets/app.min.css"/>
</head>

<body>
<div ng-controller="MainController">
  <section class="container" ng-view ng-show="animations.login || isLogin"></section>

  <section class="start" ng-class="{'close': animations.login, 'hidden': isLogin}">
    <div class="shadow-layer-global"></div>
    <article class="welcome">
      <header>
        <h1>
          Zoopervisor
          <small>A fantastic browser based client for zookeeper</small>
        </h1>
      </header>

      <form class="form" name="loginForm" novalidate ng-submit="submit()">
        <div class="form-container">
          <div class="form-group host-group">
            <input class="form-control" id="ip" name="ip" type="text"
                   size="15" placeholder="Host"
                   autofocus required
                   ng-model="zookeeper.host"
                   ng-pattern="/^(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[0-9]{1,2})(\.(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[0-9]{1,2})){3}$/"/>

            <div class="form-validation">
              <div class="form-validation-pass spin-toggle" ng-show="loginForm.ip.$valid">
                <i class="icon-ok"></i>
              </div>
            </div>
          </div>

          <div class="form-group addon-group">
            <div class="input-group-addon">
              <i class="icon-colon"></i>
            </div>
          </div>

          <div class="form-group">
            <input class="form-control" id="port" name="port" type="text"
                   placeholder="Port" size="5"
                   required
                   ng-model="zookeeper.port"
                   ng-pattern="/[0-9]/"/>

            <div class="form-validation">
              <div class="form-validation-pass spin-toggle" ng-show="loginForm.port.$valid">
                <i class="icon-ok"></i>
              </div>
            </div>
          </div>
        </div>

        <div class="text-center">
          <button class="btn btn-primary" type="submit" title="connect"
                  ng-disabled="loginForm.$invalid"
                  ng-hide="animations.load">
            <i class="icon-plug"></i>
          </button>
        </div>
      </form>

      <br/>

      <div class="start-notification" ng-if="animations.load">
        <i class="icon-spin6 animate-spin"></i>
        Connecting...
      </div>

      <div class="start-notification alert" ng-if="connectFailed && !animations.load">
        <i class="icon-cancel"></i>
        Connect Failed!
      </div>
    </article>
  </section>
</div>

<script src="/build/javascripts/ace-builds/src-min-noconflict/ace.js"></script>
<script src="/build/javascripts/vendor.min.js"></script>
<script src="/build/javascripts/app.min.js"></script>
</body>
</html>